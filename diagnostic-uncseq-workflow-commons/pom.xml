    <version>0.0.18-SNAPSHOT</version>
  </parent>
  <name>CANVAS :: Binning :: Diagnostic UNCSeq Workflow :: Commons</name>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.renci.canvas.binning.diagnostic-uncseq-workflow</groupId>
  <artifactId>diagnostic-uncseq-workflow-commons</artifactId>
  <version>0.0.18-SNAPSHOT</version>
  <packaging>bundle</packaging>
  <properties>
    <maven.site.plugin.skip>true</maven.site.plugin.skip>    
  </properties>                  
  <dependencies>
    <dependency>
      <groupId>org.renci.canvas.binning</groupId>
      <artifactId>binning-core</artifactId>
    </dependency>          
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
	<extensions>true</extensions>
        <configuration>
          <instructions>
            <Private-Package>org.renci.canvas.binning.diagnostic.uncseq.commons.*</Private-Package>
            <Export-Package>org.renci.canvas.binning.diagnostic.uncseq.commons*</Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>    
</project>
